---
import '../styles/global.css';
const { title, description = 'Insights on Product, Tech, and AI from North Partners' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title} | NorthAI</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <header class="site-header">
    <a href="/" class="logo">NorthAI</a>
    <nav>
      <ul class="nav-links">
        <li><a href="/">Blog</a></li>
        <li><a href="https://www.northpartners.ai/" target="_blank">North Partners</a></li>
        <li><a href="/keystatic">Admin</a></li>
      </ul>
    </nav>
  </header>
  <main><slot /></main>
  <footer class="site-footer">
    <p>&copy; {new Date().getFullYear()} NorthAI. All rights reserved.</p>
  </footer>
