---
import '../styles/global.css';
const { title, description = 'Insights on Product, Tech, and AI from North Partners' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title} | NorthAI</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <header class="site-header">
    <div class="header-inner">
      <a href="/" class="logo">NorthAI</a>
      <nav>
        <ul class="nav-links">
          <li><a href="/">Blog</a></li>
          <li><a href="https://www.northpartners.ai/" target="_blank" rel="noopener">North Partners</a></li>
          <li><a href="/keystatic">Admin</a></li>
        </ul>
      </nav>
    </div>
  </header>
  <main><slot /></main>
  <footer class="site-footer">
    <p>&copy; {new Date().getFullYear()} NorthAI. All rights reserved.</p>
  </footer>
  <button class="dark-toggle" id="darkToggle" aria-label="Toggle dark mode">ğŸŒ™</button>
  <script is:inline>
    const t=document.getElementById('darkToggle'),h=document.documentElement;
    if(localStorage.getItem('theme')==='dark'){h.classList.add('dark');t.textContent='â˜€ï¸'}
    t.addEventListener('click',()=>{h.classList.toggle('dark');
      if(h.classList.contains('dark')){localStorage.setItem('theme','dark');t.textContent='â˜€ï¸'}
      else{localStorage.setItem('theme','light');t.textContent='ğŸŒ™'}});
  </script>
</body>
</html>
